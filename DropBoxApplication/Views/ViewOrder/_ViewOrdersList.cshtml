                                }
                                else if (@item.OrderStatus == "Received")
                                {
                                    <td>@Html.ActionLink(Convert.ToInt32(@item.OrderId).ToString(), "OrderDetails", "EverGreenDailyActivity", new { OrderId = @item.OrderId }, new { @class = " btn-xs" })</td>
                                }
                                else
                                {
                                    <td>@item.OrderId</td>
                                }*@
                            <td>@item.OrderId</td>
                            <td>@item.OrderNumber</td>
                            <td>@item.TranscationId</td>
                            <td>@item.CustomerName</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td>@item.NetPrice</td>
                            <td>@item.OrderStatus</td>
                            <td>@string.Format("{0:dd/MM/yyyy hh:mm:ss}", @item.OrderTime)</td>
                        </tr>
