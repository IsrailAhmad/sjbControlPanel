<div class="table-responsive tables">
    <div class="ContenedorTabla">
        <table id="pruebatabla" class="table table-striped table-bordered">
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="10">No Record's found.</td>
                </tr>
            }
            else
            {
                <thead>
                    <tr>
                        <th id='column-header-1'>Image</th>
                        <th id='column-header-2'>Id</th>
                        <th id='column-header-3'>Menu Name</th>
                        <th id='column-header-4'>Menu Price</th>
                        <th id='column-header-5'>Store Name</th>
                        <th id='column-header-6'>Edit</th>
                        <th id='column-header-7'>Remove</th>
                    </tr>
                </thead>
                foreach (var item in Model)
                {
                    <tbody class="searchable">
                        <tr>
                            <td><img src="@item.ImageUrl" width="40" height="35" /></td>
                            <td>@item.MenuId</td>
                            <td>@item.MenuName</td>
                            <td>@item.MenuPrice</td>
                            <td>@item.StoreName</td>
                            <td><a href="@Url.Action("GetMenuById", "MenuMaster",new { @id= @item.MenuId})" class="btn btn-success btn-sm">Edit</a></td>
                            <td><a href="@Url.Action("RemoveMenu", "MenuMaster",new { @id= @item.MenuId})"  class="btn btn-primary btn-sm">Remove</a></td>
                        </tr>
                    </tbody>
                }
            }
        </table>
    </div>
</div>



